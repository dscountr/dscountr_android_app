<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/tvGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="normal"
                    android:textColor="@color/colorBottomBorder"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/select_your_gender"/>

                <RadioGroup
                    android:id="@+id/rgChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="23dp"
                    android:layout_below="@+id/tvGenderLabel">
                    <RadioButton
                        android:id="@+id/radioStereo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorBottomBorder"
                        android:theme="@style/MyRadioButton"/>
                    <RadioButton
                        android:id="@+id/radioMono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorBottomBorder"
                        android:theme="@style/MyRadioButton"
                        android:layout_marginLeft="20dp" />
                </RadioGroup>



                <Button
                    android:id="@+id/btnGender"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/rgChannel"
                    android:layout_marginTop="86dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    android:text="@string/finish"
                    android:fontFamily="@font/roboto_medium"
                    android:lineSpacingExtra="4sp"
                    android:textStyle="normal"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_ripple_effect"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMainBackgroundSomePages">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorShadow"/>
        <LinearLayout
            android:id="@+id/llVerifyBack"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_grey_500_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorAccent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>