<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="5sp"
                android:text="@string/enter_email"
                android:textColor="@color/colorSectionTitle"
                android:textSize="14sp"
                android:textStyle="normal" />

            <dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/tlenterEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                app:errorTextAppearance="@style/Error_Appearance"
                app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/enterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEmailLabel"
                    android:background="@drawable/textview_bg"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/enter_your_email_address"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="5sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorProductName"
                    android:textColorHint="@color/colorDisabled"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp" />
            </dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_semi_bold"
        android:lineSpacingExtra="4sp"
        android:text="@string/continue_btn"
        android:textAllCaps="false"
        android:textColor="@color/buttonColor"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_above="@+id/rlVerifyBack"
        android:layout_marginBottom="40dp"/>

    <RelativeLayout
        android:id="@+id/rlVerifyBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorShadow"/>

        <LinearLayout
            android:id="@+id/llVerifyBack"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_grey_500_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorBottomBorder"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBottomBorder"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>