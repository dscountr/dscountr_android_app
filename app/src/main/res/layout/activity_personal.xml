<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tlTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_information"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorSectionTitle"
                    android:lineSpacingExtra="5sp"
                    android:textSize="14sp"
                    android:layout_gravity="start" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_personal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorFaceBook"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="11dp">
            <RelativeLayout
                android:id="@+id/rlFacebookIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_facebook"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/facebook"
                    android:tint="@color/colorProductName"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvFacebookConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="4sp"
                android:text="@string/connect_with_facebook"
                android:textAllCaps="true"
                android:layout_toEndOf="@+id/rlFacebookIcon"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/rlFacebookIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="4sp"
                android:text="@string/find_more_friends"
                android:layout_marginEnd="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tvFacebookConnect"
                android:layout_toEndOf="@+id/rlFacebookIcon"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/rlFacebookIcon"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>