<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:scrollbars="none"
    android:background="@color/colorWhite"
    android:paddingBottom="10dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMobileLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:textColor="@color/colorBottomBorder"
            android:lineSpacingExtra="5sp"
            android:text="@string/enter_phone_number"/>

        <dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout
            android:id="@+id/tlenterNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:errorTextAppearance="@style/Error_Appearance"
            android:layout_centerHorizontal="true"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bg"
                android:hint="@string/enter_your_mobile_number"
                android:inputType="phone"
                android:digits="0123456789"
                android:layout_marginTop="10dp"
                android:maxLength="10"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:lineSpacingExtra="5sp"
                android:textColorHint="@color/colorBottomBorder"
                android:textColor="@color/colorProductName"
                android:layout_below="@+id/tvMobileLabel"/>
        </dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout>

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:textColor="@color/colorEditCancelUndoButtonLinks"
            android:lineSpacingExtra="5sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tlenterNumber"
            android:text="@string/service_terms"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnNumber"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tvTerms"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="486dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/roboto_medium"
            android:lineSpacingExtra="4sp"
            android:text="@string/continue_btn"
            android:textAllCaps="false"
            android:textColor="@color/buttonColor"
            android:textSize="16sp"
            android:textStyle="normal"/>
    </RelativeLayout>

</ScrollView>