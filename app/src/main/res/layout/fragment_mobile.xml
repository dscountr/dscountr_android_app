<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        android:scrollbars="none"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMobileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="5sp"
                android:text="@string/enter_number"
                android:textColor="@color/colorBottomBorder"
                android:textSize="14sp"
                android:textStyle="normal" />

            <dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/tlenterNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                app:errorTextAppearance="@style/Error_Appearance"
                app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/enterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMobileLabel"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_bg"
                    android:digits="0123456789"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/enter_your_mobile_number"
                    android:inputType="phone"
                    android:lineSpacingExtra="5sp"
                    android:maxLength="10"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorProductName"
                    android:textColorHint="@color/colorBottomBorder"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout>


            <RadioGroup
                android:id="@+id/rgChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tlenterNumber"
                android:layout_marginTop="23dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/radioAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/agree"
                    android:textColor="@color/colorBottomBorder"
                    android:textSize="14sp"
                    android:theme="@style/MyRadioButton" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tlenterNumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/rgChannel"
                android:layout_toRightOf="@+id/rgChannel"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="5sp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/service_terms"
                android:textColor="@color/colorEditCancelUndoButtonLinks"
                android:textSize="13sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnNumber"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_regular"
        android:lineSpacingExtra="4sp"
        android:text="@string/continue_btn"
        android:textAllCaps="false"
        android:textColor="@color/buttonColor"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/rlVerifyBack"
        android:layout_marginBottom="25dp"/>

    <RelativeLayout
        android:id="@+id/rlVerifyBack"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMainBackgroundSomePages">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorShadow"/>

    </RelativeLayout>

</RelativeLayout>