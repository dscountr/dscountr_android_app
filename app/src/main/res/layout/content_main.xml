<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    android:scrollbars="none"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.MainActivity"
    android:paddingBottom="60dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEditCancelUndoButtonLinks">

            <TextView
                android:id="@+id/tvBannerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="6sp"
                android:text="@string/discounts_for_your_everyday_purchases"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:fontFamily="@font/open_sans_bold"/>

            <TextView
                android:id="@+id/tvBannerSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorMainBackgroundSomePages"
                android:lineSpacingExtra="4sp"
                android:text="@string/get_discounts_here"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:fontFamily="@font/open_sans_regular"
                android:layout_below="@+id/tvBannerTitle"/>

            <Button
                android:id="@+id/btnLearnMore"
                android:text="@string/learn_more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/tvBannerSubTitle"
                android:background="@drawable/learn_more_btn"
                android:paddingLeft="9dp"
                android:paddingStart="9dp"
                android:paddingRight="9dp"
                android:paddingEnd="9dp"
                android:layout_marginBottom="35dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorMainBackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorSectionTitle"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/featured_retailers"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    android:layout_marginTop="15.5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorAccent"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/view_all"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    android:layout_marginTop="15.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.5dp"
                android:layout_marginBottom="18dp"
                android:background="@color/colorMainBackground"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFeaturedRetailers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="20dp"
                    android:scrollbars="none" />

            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="94dp"
                        android:orientation="vertical"
                        android:layout_marginRight="94dp">
                        <TextView
                            android:id="@+id/tvWriteShoppingList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/write_a_shopping_list"
                            android:textColor="@color/colorSectionTitle"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:textSize="12sp"
                            android:lineSpacingExtra="5sp"/>
                        <TextView
                            android:id="@+id/tvWriteShoppingListDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/write_a_shopping_list_description"
                            android:textColor="@color/colorProductName"
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="10sp"
                            android:lineSpacingExtra="4sp"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorDisabled"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_description_gray_24dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="94dp"
                        android:orientation="vertical"
                        android:layout_marginRight="94dp">
                        <TextView
                            android:id="@+id/tvShopNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_now"
                            android:textColor="@color/colorSectionTitle"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:textSize="12sp"
                            android:lineSpacingExtra="5sp"/>
                        <TextView
                            android:id="@+id/tvShopNowDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_now_description"
                            android:textColor="@color/colorProductName"
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="10sp"
                            android:lineSpacingExtra="4sp"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorDisabled"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_shopping_cart_gray_24dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="94dp"
                        android:orientation="vertical"
                        android:layout_marginRight="94dp">
                        <TextView
                            android:id="@+id/tvEarnCredits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/earn_credits"
                            android:textColor="@color/colorSectionTitle"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:textSize="12sp"
                            android:lineSpacingExtra="5sp"/>
                        <TextView
                            android:id="@+id/tvEarnCreditsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/earn_credits_description"
                            android:textColor="@color/colorProductName"
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="10sp"
                            android:lineSpacingExtra="4sp"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorDisabled"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_monetization_on_gray_24dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorSectionTitle"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/featured_in_personal_use"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorAccent"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/view_all"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    android:layout_marginTop="15.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>