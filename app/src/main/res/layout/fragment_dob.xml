<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/colorWhite"
    android:clipToPadding="false"
    android:paddingBottom="10dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat_regular"
            android:lineSpacingExtra="5sp"
            android:text="@string/enter_dob"
            android:textColor="@color/colorBottomBorder"
            android:textSize="14sp"
            android:textStyle="normal" />

        <dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout
            android:id="@+id/tlenterDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            app:errorTextAppearance="@style/Error_Appearance"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bg"

                android:drawableEnd="@drawable/ic_event_gray_24dp"
                android:drawableRight="@drawable/ic_event_gray_24dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/add_your_date_of_birth"
                android:inputType="text"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="24dp"
                android:paddingTop="10dp"
                android:paddingRight="24dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorProductName"
                android:textColorHint="@color/colorBottomBorder"
                android:textSize="14sp"
                android:textStyle="normal" />
        </dscountr.app.co.ke.dscountr_android_app.view.utils.NoChangingBackgroundTextInputLayout>

        <Button
            android:id="@+id/btnBOB"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tlenterDOB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="486dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/montserrat_regular"
            android:lineSpacingExtra="4sp"
            android:text="@string/continue_btn"
            android:textAllCaps="false"
            android:textColor="@color/buttonColor"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>

</ScrollView>