<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="60dp"
        android:clipToPadding="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlWelcome"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="54.5dp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/welcome_julie"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vWelcome"
                    android:layout_below="@+id/tvWelcome"
                    android:layout_width="165dp"
                    android:layout_height="1dp"
                    android:background="@color/colorDot"
                    android:layout_marginTop="20.5dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vWelcome"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20.5dp"
                    android:layout_marginEnd="56dp"
                    android:layout_marginRight="56dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/enjoy_great_discounts"
                    android:textColor="@color/colorMainBackgroundSomePages"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="32dp"
                android:layout_below="@+id/rlWelcome"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="32dp">

                <TextView
                    android:id="@+id/tvWelcomeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/have_any_questions"
                    android:textColor="@color/colorBottomBorder"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnStartNow"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvWelcomeMessage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="300dp"
                    android:background="@drawable/button_bg"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/start_now"
                    android:textAllCaps="false"
                    android:textColor="@color/buttonColor"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMainBackgroundSomePages">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorShadow"/>
        <LinearLayout
            android:id="@+id/llVerifyBack"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBottomBorder"
                android:fontFamily="@font/montserrat_regular"
                android:layout_gravity="center_vertical"
                android:text="@string/view_your_profile"
                android:textSize="11sp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_right_grey_500_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorBottomBorder"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>