<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="60dp"
        android:clipToPadding="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/tvMobileLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/enter_verification_code"
                    android:textColor="@color/colorSectionTitle"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <dscountr.app.co.ke.dscountr_android_app.view.utils.CodeEntryEditText
                    android:id="@+id/enterNumberVerification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:lineSpacingExtra="5sp"
                    android:layout_below="@+id/tvMobileLabel"
                    android:background="@drawable/bottom_edittext"
                    android:textColor="@color/colorProductName"/>

                <TextView
                    android:id="@+id/tvResendVerificationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/enterNumberVerification"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/resend_verification_code"
                    android:textColor="@color/colorEditCancelUndoButtonLinks"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnNumberVerificaton"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_semi_bold"
        android:lineSpacingExtra="4sp"
        android:text="@string/verify_phone"
        android:textAllCaps="false"
        android:textColor="@color/buttonColor"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_above="@+id/rlVerifyBack"
        android:layout_marginBottom="40dp"/>

    <RelativeLayout
        android:id="@+id/rlVerifyBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorShadow"/>
        <LinearLayout
            android:id="@+id/llVerifyBack"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_grey_500_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorBottomBorder"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBottomBorder"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>