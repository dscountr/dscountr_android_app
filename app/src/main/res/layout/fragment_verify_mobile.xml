<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/tvMobileLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="normal"
                    android:textColor="@color/colorBottomBorder"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/enter_verification_code"/>

                <dscountr.app.co.ke.dscountr_android_app.view.utils.CodeEntryEditText
                    android:id="@+id/enterNumberVerification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:lineSpacingExtra="5sp"
                    android:layout_below="@+id/tvMobileLabel"
                    android:background="@drawable/bottom_edittext"/>

                <TextView
                    android:id="@+id/tvResendVerificationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="normal"
                    android:textColor="@color/colorEditCancelUndoButtonLinks"
                    android:lineSpacingExtra="5sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/enterNumberVerification"
                    android:text="@string/resend_verification_code"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/btnNumberVerificaton"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvResendVerificationCode"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    android:text="@string/continue_reg"
                    android:fontFamily="@font/roboto_medium"
                    android:lineSpacingExtra="4sp"
                    android:textStyle="normal"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_ripple_effect"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMainBackgroundSomePages">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorShadow"/>
        <LinearLayout
            android:id="@+id/llVerifyBack"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_grey_500_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorAccent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>