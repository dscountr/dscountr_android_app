<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_profile"
    android:scrollbars="none"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.ProfileActivity"
    android:paddingBottom="2dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tvProfileWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:lineSpacingExtra="5sp"
                android:text="@string/welcome_message"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvProfileWelcomeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileWelcome"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/montserrat_light"
                android:lineSpacingExtra="4sp"
                android:text="@string/view_profile_info"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorMainBackground">
            <LinearLayout
                android:id="@+id/llBonusCreditsLeaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="4.5dp"
                android:orientation="horizontal"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/rlBonus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvBonusValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/montserrat_bold"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/_0"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvBonusLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvBonusValue"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/points"
                                android:textAlignment="center"
                                android:textColor="@color/colorProductName"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rlCredits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/tvCreditsValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/montserrat_bold"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/_0"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvCreditsLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvCreditsValue"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/credits"
                                android:textAlignment="center"
                                android:textColor="@color/colorProductName"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rlLeaderBoard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/tvLeaderboardValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/montserrat_bold"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/_0"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvLeaderboardLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvLeaderboardValue"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/offers"
                                android:textAlignment="center"
                                android:textColor="@color/colorProductName"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="9.5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:lineSpacingExtra="4sp"
                    android:padding="5dp"
                    android:text="@string/my_account"
                    android:textColor="@color/colorSectionTitle"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17.5dp"
                        android:layout_marginTop="17.5dp"
                        android:src="@drawable/ic_payment_gray_24dp"
                        android:tint="@color/buttonColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/payment_methods"
                        android:textColor="@color/colorProductName"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17.5dp"
                        android:layout_marginTop="17.5dp"
                        android:src="@drawable/ic_history_gray_24dp"
                        android:tint="@color/buttonColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/purchase_history"
                        android:textColor="@color/colorProductName"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17.5dp"
                        android:layout_marginTop="17.5dp"
                        android:src="@drawable/ic_assessment_gray_24dp"
                        android:tint="@color/buttonColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/saved_history"
                        android:textColor="@color/colorProductName"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17.5dp"
                        android:layout_marginTop="17.5dp"
                        android:src="@drawable/ic_youtube_searched_for_gray_24dp"
                        android:tint="@color/buttonColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/recently_viewed"
                        android:textColor="@color/colorProductName"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="9.5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:lineSpacingExtra="4sp"
                    android:padding="5dp"
                    android:text="@string/activity"
                    android:textColor="@color/colorSectionTitle"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17.5dp"
                        android:layout_marginTop="17.5dp"
                        android:src="@drawable/ic_group_work_white_24dp"
                        android:tint="@color/buttonColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/earn_credits"
                        android:textColor="@color/colorProductName"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ivInviteFriend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="17.5dp"
                            android:layout_marginTop="17.5dp"
                            android:src="@drawable/ic_person_add_white_24dp"
                            android:tint="@color/buttonColor"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="23dp"
                            android:layout_marginLeft="23dp"
                            android:layout_toEndOf="@+id/ivInviteFriend"
                            android:layout_toRightOf="@+id/ivInviteFriend"
                            android:fontFamily="@font/montserrat_medium"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/invite_a_friend"
                            android:textColor="@color/colorProductName"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/earn_20_points"
                            android:textColor="@color/colorBottomBorder"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17.5dp"
                        android:layout_marginTop="17.5dp"
                        android:src="@drawable/ic_stars_gray_24dp"
                        android:tint="@color/buttonColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="23dp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/transfer_points"
                        android:textColor="@color/colorProductName"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>